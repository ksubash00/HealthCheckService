<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <appSettings>
    <!-- Health Check Configuration -->
    <add key="CheckIntervalMinutes" value="5"/>
    
    <!-- Applications to Monitor (Format: Name|URL|ExpectedStatusCode) -->
    <!-- Separate multiple applications with semicolon -->
    <add key="Applications" value="SubashKumar Website|https://subashkumar.com|200;Google|https://www.google.com|200;Example API|https://api.example.com/health|200"/>
    
    <!-- Email Configuration -->
    <add key="SmtpServer" value="smtp.gmail.com"/>
    <add key="SmtpPort" value="587"/>
    <add key="SmtpUsername" value="your-email@gmail.com"/>
    <add key="SmtpPassword" value="your-app-password"/>
    <add key="FromEmail" value="your-email@gmail.com"/>
    <add key="ToEmail" value="ksubash00@gmail.com"/>
    <add key="EnableSsl" value="true"/>
    
    <!-- Logging -->
    <add key="LogPath" value="C:\Logs\HealthCheckService\"/>
  </appSettings>
  
  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.7.2" />
  </startup>
</configuration>